<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".components.quantitybutton.QuantityButtonActivity">

    <com.afoxplus.uikit.customview.quantitybutton.QuantityButton
        android:id="@+id/quantityButtonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:buttonType="delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.afoxplus.uikit.customview.quantitybutton.QuantityButton
        android:id="@+id/quantityButtonQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:buttonType="quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quantityButtonDelete"
        app:value="5" />

    <com.afoxplus.uikit.customview.quantitybutton.QuantityButton
        android:id="@+id/quantityButtonEditable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:buttonType="editable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quantityButtonQuantity"
        app:value="50" />

    <com.afoxplus.uikit.customview.quantitybutton.QuantityButton
        android:id="@+id/quantityButtonDynamicQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:buttonType="quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quantityButtonEditable" />

    <com.afoxplus.uikit.customview.quantitybutton.QuantityButton
        android:id="@+id/quantityButtonDynamicType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quantityButtonDynamicQuantity"
        app:value="5" />

    <com.afoxplus.uikit.customview.quantitybutton.QuantityButton
        android:id="@+id/quantityButtonEnableType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quantityButtonDynamicType" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quantityButtonEnableAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:text="Deshabilitar Add"
        app:layout_constraintBottom_toBottomOf="@id/quantityButtonEnableType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/quantityButtonEnableType" />

</androidx.constraintlayout.widget.ConstraintLayout>