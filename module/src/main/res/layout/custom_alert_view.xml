<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/alertContainer"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_alert">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alertTitle"
        style="@style/Paragraph01_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp22"
        android:layout_marginTop="@dimen/dp12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="¡Nota!" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alertMessage"
        style="@style/Paragraph02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp22"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alertTitle"
        tools:text="Recuerda que el delivery está a cargo del establecimiento" />
</androidx.constraintlayout.widget.ConstraintLayout>